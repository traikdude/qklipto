<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?selectableItemBackground">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:progress="44"
        app:indicatorColor="@color/colorPositive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="16dp"
        app:trackColor="?myBackgroundHighlight"
        app:trackCornerRadius="8dp"
        app:trackThickness="32dp" />

    <TextView
        android:id="@+id/tvProgressTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/lpProgress"
        app:layout_constraintEnd_toEndOf="@id/lpProgress"
        app:layout_constraintStart_toStartOf="@id/lpProgress"
        app:layout_constraintTop_toTopOf="@id/lpProgress"
        tools:text="Uploading (48%)" />

    <ImageView
        android:id="@+id/ivAction"
        style="@style/MyActionButton"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_download" />

</androidx.constraintlayout.widget.ConstraintLayout>
