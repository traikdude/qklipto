<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flClipDescriptionBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_floating_hint">

    <EditTextExt
        android:id="@+id/etClipDescription"
        style="@style/TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="sans-serif-condensed"
        android:gravity="top"
        android:hint="@string/common.label.description"
        android:inputType="textMultiLine|textCapSentences"
        android:overScrollMode="never"
        android:padding="12dp"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:textColorHint="#66000000"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivHintDescription"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_hint"
        app:tint="#26000000" />

</FrameLayout>