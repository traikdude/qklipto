<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="center">

    <ImageView
        android:id="@+id/notificationBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/actionStartStop"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/notification_action_pause"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/actionClipboard"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/notification_action_take"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/actionAdd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/notification_action_add"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/actionSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/notification_action_search"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</FrameLayout>