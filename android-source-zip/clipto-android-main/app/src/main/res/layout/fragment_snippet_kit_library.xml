<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryInverse">

    <clipto.common.presentation.view.DividerView
        android:id="@+id/dvToolbar"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBack"
        style="@style/MyActionButton"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/button.back"
        app:layout_constraintBottom_toTopOf="@id/dvToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/snippet_kit_public_library"
        android:textAlignment="gravity"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toTopOf="@id/dvToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srlBlocks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dvToolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBlocks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="64dp"
            android:paddingBottom="12dp"
            android:scrollbars="none"
            tools:listitem="@layout/block_chip" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.87"
        android:background="?attr/colorPrimaryInverse"
        app:layout_constraintBottom_toBottomOf="@id/rvCategories"
        app:layout_constraintTop_toBottomOf="@id/dvToolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/dvToolbar"
        tools:listitem="@layout/block_chip" />

</androidx.constraintlayout.widget.ConstraintLayout>