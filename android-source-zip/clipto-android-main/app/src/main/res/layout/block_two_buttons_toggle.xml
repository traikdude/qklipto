<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:gravity="center_horizontal"
    app:selectionRequired="true"
    app:singleSelection="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/color_button_toggle_text"
        app:backgroundTint="@color/color_button_toggle_background"
        app:strokeColor="@color/color_button_toggle"
        tools:text="Button 1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/color_button_toggle_text"
        app:backgroundTint="@color/color_button_toggle_background"
        app:strokeColor="@color/color_button_toggle"
        tools:text="Button 2" />

</com.google.android.material.button.MaterialButtonToggleGroup>