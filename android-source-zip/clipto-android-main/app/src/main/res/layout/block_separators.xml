<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayoutExt xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clSeparators"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="false">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/separatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:singleLine="true"
        app:singleSelection="true" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/clip.multiple.merge.separator.other"
        app:counterEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/separatorView"
        app:layout_constraintStart_toStartOf="@id/separatorView"
        app:layout_constraintTop_toBottomOf="@id/separatorView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCustom"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:maxLength="100"
            android:textColorHint="?android:textColorSecondary"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayoutExt>