<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="8dp"
        android:drawable="@drawable/ic_upload"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="15.0"
            android:useLevel="true">


            <gradient
                android:centerColor="?actionIconColorInactive"
                android:endColor="?actionIconColorInactive"
                android:startColor="?actionIconColorInactive"
                android:type="sweep" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="15.0"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="?colorAccent"
                    android:endColor="?colorAccent"
                    android:startColor="?colorAccent"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
